---

<form action="#" class="text-[#3A725F] font-serif">
    <div class="flex flex-col gap-8">
  
      <!-- Nombre -->
      <div>
        <label for="name" class="block text-2xl font-bold mb-2">Nombre</label>
        <input
          type="text"
          name="name"
          id="name"
          required
          class="w-full rounded-lg border border-gray-300 p-3 text-base font-serif focus:outline-none focus:ring-2 focus:ring-[#3A725F]"
        />
      </div>
  
      <!-- Email -->
      <div>
        <label for="email" class="block text-2xl font-bold mb-2">Correo electrónico</label>
        <input
          type="email"
          name="email"
          id="email"
          placeholder="tucorreo@ejemplo.com"
          required
          class="w-full rounded-lg border border-gray-300 p-3 text-base font-serif focus:outline-none focus:ring-2 focus:ring-[#3A725F]"
        />
      </div>
  
      <!-- Mensaje -->
      <div>
        <label for="message" class="block text-2xl font-bold mb-2">Mensaje</label>
        <textarea
          name="message"
          id="message"
          rows="4"
          required
          class="w-full rounded-lg border border-gray-300 p-3 text-base font-serif focus:outline-none focus:ring-2 focus:ring-[#3A725F]"
        ></textarea>
      </div>
  
      <!-- Botón -->
      <div>
        <button
          type="submit"
          class="bg-[#3A725F] text-white font-serif text-lg font-semibold px-8 py-3 rounded-lg hover:bg-[#2c5c4c] transition-colors duration-300"
        >
          Enviar
        </button>
      </div>
  
    </div>
  </form>
  