---
const { title = "", link } = Astro.props;
---

<div class="flex flex-col lg:flex-row items-center gap-8 lg:justify-evenly max-w-4xl w-full mx-auto">
	<h2 class="text-white text-center font-serif text-2xl lg:text-3xl">
		{title}
	  </h2>
	  

	{
		link && (
			<a class={`button button-${link.color}`} href={link.url}>
				{link.title}
			</a>
		)
	}
</div>
