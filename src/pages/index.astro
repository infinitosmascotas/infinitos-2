---
import Layout from "~/layouts/Layout.astro";
import Section from "~/components/Section.astro";
import Container from "~/components/Container.astro";
import { Image, Picture } from "astro:assets";
import Button from "~/components/Button.astro";
import Heading from "~/components/Heading.astro";
import CardsNew from "~/components/CardsEco.astro";
import { phone,email,hours,zonas, wp} from "~/data/config.ts";

---

<Layout title="Infinitos" pageTitle="Infinitos" description="Servicios de cremación de mascotas con respeto y sensibilidad. Acompañamos cada paso con cuidado.">
	<!-- Hero Section similar a EternaPet -->
	<Section class:list={"relative"}>
		<!-- FONDO DE COLOR DE RESPALDO -->
		<div class="absolute inset-0 bg-[#D8B7A4] z-0"></div>
		<img
			src="/manopata.webp"
			alt="Perro y persona compartiendo un momento de despedida"
			class:list={"absolute inset-0 w-full h-full object-cover"}
			loading={"eager"}
			fetchpriority={"high"}
		/>
		<!-- Overlay semi-transparente para mejorar la visibilidad del texto -->
		<div class="absolute inset-0 bg-black/30"></div>

		<Container class:list={"relative z-10 h-full min-h-[500px] lg:min-h-svh lg:h-svh"}>
			<div class="flex flex-col items-center justify-center h-full text-center transition-opacity duration-500 ease-in">
				<div class="prose prose-xl prose-invert text-white max-w-3xl">
					<h1 class="font-sans">
						<span class="block text-4xl lg:text-6xl uppercase text-white tracking-wider">Cremación de mascotas</span>
					</h1>
					<p class="mt-4 text-lg lg:text-xl text-white">
						Su huella por siempre
					</p>
					<div class="not-prose mt-8 transition">
						<Button url="/contacto", color="white"> Contacto </Button>
					</div>
				</div>
			</div>
		</Container>
	</Section>

	<Section class:list={["bg-hueso"]}>
		<Container>
			<Heading>
				<h2 slot="heading-title" class="h2 text-musgo text-left font-sans">Servicios</h2>
			</Heading>
			<CardsNew />
		</Container>
	</Section>
	
		<section class="bg-hueso py-20 font-sans">
			<div class="max-w-6xl mx-auto px-6">
			<!-- Título principal -->
			<h2 class="h2 text-musgo font-sans text-center mb-16 tracking-wide">
				Nuestro Proceso
			</h2>
		
			<!-- Cards -->
			<div class="grid gap-12 md:grid-cols-3">
				<!-- Card 1: Traslado -->
				<div class="bg-white p-8 rounded-2xl shadow-xl text-center font-sans border border-musgo/20">
				<img src="/lorry.png" alt="Icono traslado" class="mx-auto w-24 h-24 mb-6" />
				<h3 class="text-2xl font-sans font-semibold text-musgo mb-3">Traslado</h3>
				<p class="text-lg text-musgo/80">Retiramos a tu mascota del domicilio o veterinaria.</p>
				</div>
		
				<!-- Card 2: Cremación -->
				<div class="bg-white p-8 rounded-2xl shadow-xl text-center font-sans border border-musgo/20">
				<img src="/paw.png" alt="Icono cremación" class="mx-auto w-24 h-24 mb-6" />
				<h3 class="text-2xl font-sans font-semibold text-musgo mb-3">Cremación</h3>
				<p class="text-lg text-musgo/80">Individual y certificada. Opción de presenciarla.</p>
				</div>
		
				<!-- Card 3: Entrega -->
				<div class="bg-white p-8 rounded-2xl shadow-xl text-center font-sans border border-musgo/20">
				<img src="/love.png" alt="Icono entrega" class="mx-auto w-w-24 h-24 mb-6" />
				<h3 class="text-2xl font-sans font-semibold text-musgo mb-3">Entrega</h3>
				<p class="text-lg text-musgo/80">Cenizas entregadas en urna o bolsa, donde vos elijas.</p>
				</div>
			</div>
			</div>
		</section>
	  
	  
	  
	
	  <Section class:list={"relative bg-[#3A725F]"}>
		<img
		  src="/manopata.webp"
		  alt="Fondo de despedida" 
		  class:list={["absolute inset-0 w-full h-full object-cover opacity-30"]} 
		/>
		<div class="absolute inset-0 bg-[#2E4A3A]"></div>
	  
		<Container class:list={["relative z-10 py-20 text-hueso font-sans"]}>
		  <div class="grid md:grid-cols-2 gap-10 items-start">
			
			<!-- Bloque principal: Contacto + Botón -->
			<div class="text-center space-y-6 flex flex-col items-center justify-center">
			  <h2 class="text-4xl justify-center font-sans leading-tight">Contactanos para despedir a tu mascota con respeto</h2>
			  <div class="w-full flex justify-center">
				<a class="inline-block bg-white text-[#3A725F] font-semibold py-3 px-10 text-lg rounded-full shadow hover:bg-[#f5f5f5] transition" href="/contacto">
				  Contacto
				</a>
			  </div>
			</div>
	  
			<!-- Información adicional: Detalles de contacto -->
			<div class="grid md:grid-cols-2 gap-8 text-lg font-sans">
				<!-- Columna 1 -->
				<div class="space-y-6">
				  <h3 class="text-2xl font-bold font-sans">Contacto</h3>
				  <div class="flex items-center gap-3">
					<img src="/whatsapp-blanco.png" alt="Whatsapp" class="w-6 h-6 opacity-80 hover:opacity-100 transition-opacity duration-300" />
					<span>+54 9 11 3281-3334</span>
				  </div>				  
				  <div class="flex items-center gap-3">
					<img src="/phone.png" alt="Teléfono" class="w-6 h-6 opacity-80 hover:opacity-100 transition-opacity duration-300" />
					<span>{phone.label}</span>
				  </div>
				  <div class="flex items-center gap-3">
					<img src="/email.png" alt="Email" class="w-6 h-6 opacity-80 hover:opacity-100 transition-opacity duration-300" />
					<span>{email.label}</span>

				  </div>
				</div>
			  
				<!-- Columna 2 -->
				<div class="space-y-6">
				  <h3 class="text-2xl font-bold font-sans">Horarios</h3>
				  <span>{hours.label}</span><br>
				  <span>{wp.label}</span>

				  
				  <div class="space-y-4">
				  <h3 class="text-2xl font-bold font-sans">Áreas de cobertura</h3>
				  <span>{zonas.label}</span>

				</div>
			  </div>
			  
			  
	  
	